<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/solr_plugin_data" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <reference id="tracker" interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <bean id="solr-impl" scope="singleton" class="org.safehaus.subutai.plugin.solr.impl.SolrImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="dataSource" />
    <property name="tracker" ref="tracker" />
    <property name="environmentManager" ref="environmentManager" />
  </bean>

  <service ref="solr-impl" interface="org.safehaus.subutai.plugin.solr.api.Solr" />

</blueprint>
