<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="io.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" availability="mandatory"
             interface="io.subutai.core.environment.api.EnvironmentManager" />
  <reference id="hadoopManager" availability="mandatory"
             interface="io.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="pluginDAO" interface="io.subutai.plugin.common.api.PluginDAO" />
  <!-- *********************************************************************************** -->

  <bean id="lucene-impl" scope="singleton" class="io.subutai.plugin.lucene.impl.LuceneImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="tracker" />
    <argument ref="environmentManager" />
    <argument ref="hadoopManager" />
    <argument ref="pluginDAO" />
  </bean>

  <!-- *********************************************************************************** -->
  <service ref="lucene-impl" interface="io.subutai.plugin.lucene.api.Lucene" />
  <service ref="lucene-impl" interface="io.subutai.core.environment.api.EnvironmentEventListener" />
  <!-- *********************************************************************************** -->

  <service ref="module" interface="io.subutai.webui.api.WebuiModule" />

  <bean id="module" scope="singleton" class="io.subutai.plugin.lucene.impl.LuceneWebModule">
  </bean>

</blueprint>
