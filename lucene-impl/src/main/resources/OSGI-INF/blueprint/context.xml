<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="io.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" availability="mandatory"
             interface="io.subutai.core.env.api.EnvironmentManager" />
  <reference id="hadoopManager" availability="mandatory"
             interface="io.subutai.plugin.hadoop.api.Hadoop" />

  <bean id="lucene-impl" scope="singleton" class="io.subutai.plugin.lucene.impl.LuceneImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="tracker" />
    <argument ref="environmentManager" />
    <argument ref="hadoopManager" />
  </bean>

  <service ref="lucene-impl" interface="io.subutai.plugin.lucene.api.Lucene" />

  <service ref="lucene-impl" interface="io.subutai.core.env.api.EnvironmentEventListener" />


</blueprint>
