<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">



  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager"
             interface="org.safehaus.subutai.core.env.api.EnvironmentManager" />
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />

  <bean id="flume-impl" scope="singleton" class="org.safehaus.subutai.plugin.flume.impl.FlumeImpl"
        init-method="init" destroy-method="destroy">
      <argument ref="tracker" />
      <argument ref="environmentManager" />
      <argument ref="hadoopManager" />
  </bean>

  <service ref="flume-impl" interface="org.safehaus.subutai.plugin.flume.api.Flume" />

  <service ref="flume-impl" interface="org.safehaus.subutai.core.env.api.EnvironmentEventListener" />

</blueprint>
