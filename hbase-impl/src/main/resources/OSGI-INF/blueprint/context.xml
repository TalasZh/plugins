<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/hbase_plugin_data" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <reference id="hadoopManager" interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="tracker" interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />
  <reference id="monitor" interface="org.safehaus.subutai.core.metric.api.Monitor" />

  <bean id="hbase-impl" scope="singleton" class="org.safehaus.subutai.plugin.hbase.impl.HBaseImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="hadoopManager" />
    <argument ref="tracker" />
    <argument ref="environmentManager" />
    <argument ref="dataSource" />
    <argument ref="monitor" />
  </bean>

  <service ref="hbase-impl" interface="org.safehaus.subutai.plugin.hbase.api.HBase" />

</blueprint>
