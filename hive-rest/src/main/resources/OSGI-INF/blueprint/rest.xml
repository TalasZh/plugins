<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusHive">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="hiveManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hive.api.Hive" />
  <reference id="hadoop" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="environmentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />
  <bean id="restService" class="org.safehaus.subutai.plugin.hive.rest.RestService">
    <property name="hiveManager" ref="hiveManager" />
    <property name="hadoop" ref="hadoop" />
    <property name="environmentManager" ref="environmentManager" />
  </bean>

  <jaxrs:server address="/hive" id="hiveRestService">
    <jaxrs:serviceBeans>
      <ref component-id="restService" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
