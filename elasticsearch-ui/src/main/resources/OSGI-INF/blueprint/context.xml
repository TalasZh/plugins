<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    default-activation="eager"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule" />

  <reference id="elasticsearch" availability="mandatory" interface="org.safehaus.subutai.plugin.elasticsearch.api.Elasticsearch" />
  <reference id="tracker" availability="mandatory" interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" availability="mandatory" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <bean id="module" scope="singleton" class="org.safehaus.subutai.plugin.elasticsearch.ui.ElasticsearchPortalModule"
        init-method="init" destroy-method="destroy">
    <argument ref="elasticsearch" />
    <argument ref="tracker" />
    <argument ref="environmentManager" />
  </bean>



</blueprint>