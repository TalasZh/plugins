<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    default-activation="eager"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="pig" availability="mandatory" interface="io.subutai.plugin.pig.api.Pig" />
  <reference id="hadoop" availability="mandatory" interface="io.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="tracker" availability="mandatory" interface="io.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager"
             interface="io.subutai.core.environment.api.EnvironmentManager" />
  <reference id="portalModuleService" availability="mandatory"
             interface="io.subutai.server.ui.api.PortalModuleService" />

  <bean id="module" scope="singleton" class="io.subutai.plugin.pig.ui.PigPortalModule"
        init-method="init" destroy-method="destroy">
    <argument ref="pig" />
    <argument ref="hadoop" />
    <argument ref="tracker" />
    <argument ref="environmentManager" />
  </bean>

  <service ref="module" interface="io.subutai.server.ui.api.PortalModule" />

</blueprint>