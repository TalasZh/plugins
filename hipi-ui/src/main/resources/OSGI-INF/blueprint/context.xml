<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    default-activation="eager"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="hipi" availability="mandatory"
             interface="io.subutai.plugin.hipi.api.Hipi" />
  <reference id="hadoop" availability="mandatory"
             interface="io.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="tracker" availability="mandatory"
             interface="io.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" availability="mandatory"
             interface="io.subutai.core.env.api.EnvironmentManager" />

  <bean id="module" scope="singleton" class="io.subutai.plugin.hipi.ui.HipiPortalModule"
        init-method="init" destroy-method="destroy">
    <argument ref="hipi" />
    <argument ref="hadoop" />
    <argument ref="tracker" />
    <argument ref="environmentManager" />
  </bean>

  <service ref="module" interface="io.subutai.server.ui.api.PortalModule" />

</blueprint>
