<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
  <reference id="genericPlugin" availability="mandatory"
             interface="io.subutai.plugin.generic.api.GenericPlugin" />
  <reference id="registry" availability="mandatory"
             interface="io.subutai.core.registry.api.TemplateRegistry" />
  <reference id="manager" availability="mandatory"
             interface="io.subutai.core.environment.api.EnvironmentManager" />
  <bean id="plugin" scope="singleton" class="io.subutai.plugin.generic.ui.GenericPluginPortalModule">
    <argument ref="genericPlugin" />
    <argument ref="registry" />
    <argument ref="manager" />
  </bean>

  <service id="genericComponent" ref="plugin" interface="io.subutai.server.ui.api.PortalModule" />

</blueprint>
