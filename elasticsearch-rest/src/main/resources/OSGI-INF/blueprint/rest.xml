<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusElasticSearch">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="elasticsearch" availability="mandatory"
             interface="org.safehaus.subutai.plugin.elasticsearch.api.Elasticsearch" />

  <bean id="restService" class="org.safehaus.subutai.plugin.elasticsearch.rest.RestServiceImpl">
    <property name="elasticsearch" ref="elasticsearch" />
  </bean>

  <jaxrs:server address="/elasticsearch" id="elasticsearchRestService">
    <jaxrs:serviceBeans>
      <ref component-id="restService" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
