<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="environmentManager" interface="org.safehaus.subutai.core.env.api.EnvironmentManager" />
  <reference id="monitor" availability="mandatory" interface="org.safehaus.subutai.core.metric.api.Monitor" />
  <reference id="peerManager" availability="mandatory" interface="org.safehaus.subutai.core.peer.api.PeerManager" />

  <bean id="elasticsearch-impl" scope="singleton"
        class="org.safehaus.subutai.plugin.elasticsearch.impl.ElasticsearchImpl"
        init-method="init" destroy-method="destroy">

    <argument ref="monitor" />
    <property name="tracker" ref="tracker" />
    <property name="environmentManager" ref="environmentManager" />
    <property name="peerManager" ref="peerManager" />
  </bean>

  <bean id="alertListener" scope="singleton"
        class="org.safehaus.subutai.plugin.elasticsearch.impl.alert.EsAlertListener">
    <argument ref="elasticsearch-impl" />
  </bean>

  <service ref="elasticsearch-impl" interface="org.safehaus.subutai.plugin.elasticsearch.api.Elasticsearch" />
  <service ref="elasticsearch-impl" interface="org.safehaus.subutai.core.env.api.EnvironmentEventListener" />

</blueprint>
