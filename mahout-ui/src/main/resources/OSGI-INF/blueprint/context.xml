<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <service ref="module" interface="io.subutai.server.ui.api.PortalModule" />

  <reference id="mahout" availability="mandatory" interface="io.subutai.plugin.mahout.api.Mahout" />
  <reference id="tracker" availability="mandatory" interface="io.subutai.core.tracker.api.Tracker" />
  <reference id="hadoop" availability="mandatory" interface="io.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="environmentManager" availability="mandatory" interface="io.subutai.core.environment.api.EnvironmentManager" />

  <bean id="module" scope="singleton" class="io.subutai.plugin.mahout.ui.MahoutPortalModule"
        init-method="init" destroy-method="destroy">
    <argument ref="mahout" />
    <argument ref="tracker" />
    <argument ref="hadoop" />
    <argument ref="environmentManager" />
  </bean>

</blueprint>
