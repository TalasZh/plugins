<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/accumulo_plugin_data" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <reference id="tracker" interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="hadoopManager" interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="zkManager" interface="org.safehaus.subutai.plugin.zookeeper.api.Zookeeper" />
  <reference id="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <bean id="accumulo-impl" scope="singleton" class="org.safehaus.subutai.plugin.accumulo.impl.AccumuloImpl"
        init-method="init" destroy-method="destroy">
    <property name="tracker" ref="tracker" />
    <property name="environmentManager" ref="environmentManager" />
    <property name="hadoopManager" ref="hadoopManager" />
    <property name="zkManager" ref="zkManager" />
    <argument ref="dataSource" />
  </bean>

  <service ref="accumulo-impl" interface="org.safehaus.subutai.plugin.accumulo.api.Accumulo" />

</blueprint>