<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    >

  <reference id="hiveManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hive.api.Hive" />
  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.core.tracker.api.Tracker" />
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="environmentManager"
             interface="org.safehaus.subutai.core.env.api.EnvironmentManager" />

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

    <command name="hive/list-clusters">
      <action class="org.safehaus.subutai.plugin.hive.cli.ListClustersCommand">
        <property name="hiveManager" ref="hiveManager" />
      </action>
    </command>

    <command name="hive/uninstall-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.UninstallClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="tracker" ref="tracker" />
      </action>
    </command>

    <command name="hive/install-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.InstallClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="hadoopManager" ref="hadoopManager" />
        <property name="environmentManager" ref="environmentManager" />
        <property name="tracker" ref="tracker" />
      </action>
    </command>

    <command name="hive/start-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.StartClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="tracker" ref="tracker" />
      </action>
    </command>

    <command name="hive/stop-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.StopClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="tracker" ref="tracker" />
      </action>
    </command>

    <command name="hive/check-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.CheckClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="tracker" ref="tracker" />
        <property name="environmentManager" ref="environmentManager" />
      </action>
    </command>

    <command name="hive/describe-cluster">
      <action class="org.safehaus.subutai.plugin.hive.cli.DescribeClusterCommand">
        <property name="hiveManager" ref="hiveManager" />
        <property name="environmentManager" ref="environmentManager" />
      </action>
    </command>

  </command-bundle>

</blueprint>
